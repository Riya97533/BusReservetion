<h1>Tickets for <%= link_to @bus.name, @bus %></h1>
 <%= form_with(model: [@bus, @ticket], local: true) do |f| %>



<%= f.label :source %>
  <%= f.text_field :source %>

  <%= f.label :destination %>
  <%= f.text_field :destination %>

  <%= f.label :fare %>
  <%= f.number_field :fare %>

  <%= f.label :description %>
  <%= f.text_field :description %>

<%= f.label :starts_at %>
<p>
  <%= f.datetime_select :starts_at, {ampm:true}, {class:"datetime"} %>
  </p>



<%# <%= f.label :ticket_type %>
<%# <%= f.text_field :ticket_type, autofocus: true %> 

<%= f.submit %>
<% end %>