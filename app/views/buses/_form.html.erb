<%= form_with(model: bus, local: true) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :source %>
  <%= f.text_field :source %>

  <%= f.label :destination %>
  <%= f.text_field :destination %>

  <%= f.label :fare %>
  <%= f.number_field :fare %>

  <%= f.label :description %>
  <%= f.text_field :description %>

<%= f.label :starts_at %>
<p>
  <%= f.datetime_select :starts_at, {ampm:true}, {class:"datetime"} %>
  </p>
  <p>
<%= f.submit %>
</p>
<% end %>