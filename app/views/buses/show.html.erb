<h1><%= @bus.name %></h1>
<ul>
<li><%= @bus.source %></li>
<li><%= @bus.destination %></li>
<li><%= @bus.fare %></li>
<li><%= @bus.description %></li>
<li><%= @bus.starts_at %></li>
</ul>

<% if current_user_admin? %>
<section class="admin">
<%=link_to "Edit", edit_bus_path(@bus), class: "button" %>
<%=link_to "Delete", @bus, class: "button", method: :delete,
                    data: { confirm: "Really?!" } %>
</section>
<% end %>